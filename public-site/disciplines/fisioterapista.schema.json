{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "title-color": {
      "type": "string"
    },
    "header": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "subtitle": {
          "type": "string"
        },
        "background-image": {
          "type": "string"
        },
        "background-color": {
          "type": "string"
        }
      },
      "required": ["title", "subtitle", "background-image", "background-color"]
    },
    "subheader": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "content": {
          "type": "string"
        },
        "background-image": {
          "type": "string"
        }
      },
      "required": ["title", "content", "background-image"]
    },
    "problems": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "title": {
              "type": "string"
            },
            "content": {
              "type": "string"
            }
          },
          "required": ["title", "content"]
        }
      ]
    },
    "bundles": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "uri": {
              "type": "string"
            },
            "title": {
              "type": "string"
            },
            "description": {
              "type": "string"
            },
            "specification": {
              "type": "string"
            },
            "image": {
              "type": "string"
            },
            "background-color": {
              "type": "string"
            },
            "price": {
              "type": "number"
            },
            "discount": {
              "type": "number"
            }
          },
          "required": [
            "uri",
            "title",
            "description",
            "specification",
            "image",
            "background-color",
            "price",
            "discount"
          ]
        }
      ]
    },
    "teleconsulting": {
      "type": "object",
      "properties": {
        "title1": {
          "type": "string"
        },
        "title2": {
          "type": "string"
        },
        "content": {
          "type": "string"
        },
        "price": {
          "type": "number"
        }
      },
      "required": ["title1", "title2", "content", "price"]
    },
    "evaluation-test": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "content": {
          "type": "string"
        },
        "image": {
          "type": "string"
        },
        "background-color": {
          "type": "string"
        }
      },
      "required": ["title", "content", "image", "background-color"]
    }
  },
  "required": ["title-color", "header", "subheader", "problems", "teleconsulting"]
}
